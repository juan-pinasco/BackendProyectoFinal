<h1>Seccion de productos</h1>

<a href="/api/views"><button>Volver a Home</button></a>

<hr />
<h2>Crear nuevo producto</h2>
<form action="/api/products/productoNuevo" method="post">
  Title:
  <input type="text" name="title" id="title" />
  Description:
  <input type="text" name="description" id="description" />
  Price:
  <input type="number" name="price" id="price" />
  Stock:
  <input type="number" name="stock" id="stock" />
  Code:
  <input type="text" name="code" id="code" />
  Category:
  <input type="text" name="category" id="category" />
  <br />
  <br />
  <input type="submit" value="ACEPTAR" />
</form>
<hr />

<h2>Lista de productos</h2>
<br />
<a href="{{products.prevLink}}"><button>Pag Anterior</button></a>
<a href="{{products.nextLink}}"><button>Pag Siguiente</button></a>
<a
  href="http://localhost:8080/api/products?page={{products.page}}&limit={{products.limit}}&sortPrice=ASC"
><button>Precio orden ASC</button></a>
<a
  href="http://localhost:8080/api/products?page={{products.page}}&limit={{products.limit}}&sortPrice=DESC"
><button>Precio orden DESC</button></a>
<br />
<br />
<form
  action="http://localhost:8080/api/products?page={{products.page}}&limit={{products.limit}}&{{products.query}}"
  method="get"
>
  <input
    type="text"
    name="category"
    id="category"
    placeholder="buscar por categoria"
  />
  <input type="submit" value="Buscar" />
</form>
<br />
<br />
<br />
{{!-- {{#each products.results}} --}}
{{#each products.payload}}
  <h3>{{this.title}}</h3>
  <h4>Precio: {{this.price}}</h4>

  <a href="/api/products/verDetalle/{{this._id}}"><button>Ver en detalle o
      modificar producto</button></a>
  <a href="/api/products/delete/{{this._id}}"><button>Eliminar</button></a>

{{/each}}
<hr />